<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="0dp"/>
            <gradient
                android:angle="0"
                android:startColor="@color/BLACK"
                android:endColor="@color/BLACK"
                android:centerY="0.5"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <stroke
                    android:dashWidth="50dp"
                    android:dashGap="5dp"/>
                <corners
                    android:radius="0dp"/>
                <gradient
                    android:angle="0"
                    android:startColor="@color/SAFRON"
                    android:endColor="@color/DARK_SAFRON"
                    android:centerY="0.5"/>

            </shape>
        </clip>
    </item>
</layer-list>
