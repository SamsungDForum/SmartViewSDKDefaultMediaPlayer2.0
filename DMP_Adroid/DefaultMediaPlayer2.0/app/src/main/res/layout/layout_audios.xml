<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingStart="25dp"
    android:paddingEnd="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/audio_albumArt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/image_background"
        android:gravity="center"
        android:scaleType="fitXY"
        android:padding="1dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/audio_albumArt"
        android:layout_centerVertical="true"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

    <TextView
        android:id="@+id/audio_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="marquee"/>

    <TextView
        android:id="@+id/audio_albumName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_below="@+id/audio_title"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnEnqueue"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_selector_light"
        android:focusable="false"
        android:visibility="invisible"
        android:text="ADD"
        android:textColor="@color/T_SAFRON"
        android:textSize="13sp"
        android:textAlignment="center"/>
</RelativeLayout>
